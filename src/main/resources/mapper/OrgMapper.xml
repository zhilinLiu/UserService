<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.kando.dao.OrgDao">
	<resultMap id="OrgResultMap" type="com.kando.entity.Organization">
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="org_id" property="org_id" jdbcType="VARCHAR" />
        <result column="create_time" property="create_time" jdbcType="TIMESTAMP" />
        <result column="status" property="status" jdbcType="INTEGER" />
    </resultMap>
    
  	<sql id="Org_Column_List">
        id, name, org_id, status, create_time
    </sql>
    
    <select id="selectByid"
    resultMap="OrgResultMap">
        select
        <include refid="Org_Column_List" />
        from sys_org
        where id = #{id,jdbcType=INTEGER}
    </select>
    
    <select id="selectAll"
    resultType="com.kando.entity.Organization">
        select
        <include refid="Org_Column_List" />
        from sys_org 
        where 1=1
        <if test="Key!=null and Key!=''">
           and name like CONCAT('%',#{Key,jdbcType=VARCHAR},'%')
        </if>
    </select>
    
    <update id="update" parameterType="com.kando.entity.Organization">
	update sys_org
	<set >
      <if test="id != null" >
        id = #{id,jdbcType=INTEGER},
      </if>
      <if test="name != null" >
        name = #{name,jdbcType=VARCHAR},
      </if>
      <if test="org_id != null" >
        org_id = #{org_id,jdbcType=VARCHAR},
      </if>
      <if test="create_time != null" >
        create_time = #{create_time,jdbcType=TIMESTAMP},
      </if>
      <if test="status != null" >
        status = #{status,jdbcType=INTEGER},
      </if>
    </set>
	where id = #{id,jdbcType=INTEGER}
	</update>
    
    <delete id="deleteByid" parameterType="com.kando.entity.Organization">  
        delete from sys_org where id = #{id,jdbcType=INTEGER}
	</delete> 
	
	<insert id="insertOrg" parameterType="com.kando.entity.Organization">
	insert into sys_org(id,name,org_id,create_time,status)
	values(#{id,jdbcType=INTEGER},#{name,jdbcType=VARCHAR},#{org_id,jdbcType=VARCHAR},
	#{create_time,jdbcType=TIMESTAMP},#{status,jdbcType=INTEGER})
	</insert>
	
</mapper>

